{% extends '@FOSUser/baseLogin.html.twig' %}

{% block body %}


    <div class="container" style="margin-top: 10%">
        <div class="row">
            <div class="col-md-6 col-md-offset-2">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {{ form_label(form.email, "Email") }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control input-sm"'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.username, "Login") }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control input-sm"'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.plainPassword.first, "PWD") }}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-sm"'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.plainPassword.second, "PWD") }}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-sm"'}}) }}
                        </div>

                        <div>
                            <input type="submit" class="btn btn-primary" value="submit" />
                        </div>

                        {{ form_rest(form) }}

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}